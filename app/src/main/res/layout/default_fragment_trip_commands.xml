<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/guillotine_background"
    android:layout_marginTop="17dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="3dp"

    android:elevation="4dp"
    app:cardCornerRadius="2dp"
    android:fadingEdgeLength="2dp"
    android:id="@+id/Default_trip_CardView"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/truck_image_commands"
        android:layout_gravity="top"
        android:layout_margin="5dp"/>

    <View
        android:id="@+id/circleIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/trip_status_circle_red"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/startTripButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="20dp"
        android:text="Start"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"/>



</android.support.v7.widget.CardView>