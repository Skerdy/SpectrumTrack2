<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/map_guillotine"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/map" />

        <TextView
            android:id="@+id/mapTxt"
            style="@style/TextView.GuillotineItem"
            android:text="Map" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activities_guillotine"
        style="@style/LinearLayout.GuillotineItem"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/activities" />

        <TextView
            android:id="@+id/activitiesTxt"
            style="@style/TextView.GuillotineItem"
            android:text="Activities"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stops_guillotine"
        style="@style/LinearLayout.GuillotineItem"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/stops" />

        <TextView
            android:id="@+id/StopsTxt"
            style="@style/TextView.GuillotineItem.Selected"
            android:text="Stops" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <LinearLayout
        android:id="@+id/main_menu_guillotine"
        style="@style/LinearLayout.GuillotineItem"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/mainMenuTxt"
            style="@style/TextView.GuillotineItem"
            android:text="Back to Main Menu" />
    </LinearLayout>
</LinearLayout>